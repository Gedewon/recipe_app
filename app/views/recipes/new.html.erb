<%= bootstrap_form_tag(
                   :url => user_recipes_path,
                   :layout => :horizontal,
                   :label_col => "col-md-3",
                   :control_col => "col-md-4") do |f| %>
  <%= f.text_field :name %>
  <%= f.number_field :preparation_time,  placeholder: 'Time in minutes' %>
  <%= f.number_field :cooking_time,  placeholder: 'Time in minutes' %>
  <%= f.text_area :description %>
  <%= f.check_box :public, switch: true %>
  <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Add ingredient
  </button>
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Add ingredient</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <%= f.select :food, @food_choices , { label: "Choose your favorite fruit:", wrapper: { class: 'has-warning', data: { foo: 'bar' } } }, { class: "selectpicker" } %>
          <%= f.number_field :quantity,  placeholder: 'Quantity' %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <%= button_to 'add food', recipes_add_food_path, data: :disable_with%>
          <%# <input type="button" onclick="<% controller.add_food %>
        </div>
      </div>
    </div>
  </div>
  <%= f.submit "Save recipe" %>
<% end %>
